<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="org.mybatis.example.BlogMapper">
  	<insert id="insertCbComment" parameterType="CbCommentDto">
		insert into cbComment values(seq_cbcomment.nextval, #{userID}, #{cbComment},
		to_char(sysdate + 90), #{codyBoardNo})
	</insert>
	
	<select id="findAllCbComment" parameterType="int" resultType="CbCommentDto">
		select * from cbComment where codyBoardNo = #{codyBoardNo} ORDER BY NO asc
	</select>
	
	<update id="updateCbComment" parameterType="CbReplyUpdateDto">
		UPDATE cbcomment SET cbcomment = #{cbCommentUpdate} WHERE NO = #{no}
	</update>
	
	<delete id="deleteCbComment" parameterType="int">
		delete from cbcomment where no = #{cbCommentNo}
	</delete>
</mapper>
